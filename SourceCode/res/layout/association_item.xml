<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_normal"
    android:layout_margin="@dimen/thin_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAssociationImage"
        android:background="#00000000"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:clickable="true"
        android:padding="@dimen/thin_padding"/>

    <TextView
        android:id="@+id/tvAssociationName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/association_text_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="association name"
        android:textColor="@color/white"
        android:typeface="serif"
        android:textSize="@dimen/commom_font_size_small" />

</LinearLayout>